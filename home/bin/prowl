#!/usr/bin/env perl
use 5.12.1;

use WebService::Prowl;
use constant API_KEY => 'e9ebc570a43db96e306270ea23ca95a440cee272';

my $ws = WebService::Prowl->new( apikey => API_KEY );
$ws->verify || die $ws->error();

$ws->add(
    application => "prowl script",
    event       => `hostname`,
    description => join ' ', @ARGV,
);
