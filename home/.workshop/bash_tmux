update_ssh_agent() {
        if [[ "$TMUX" ]]
        then 
                export SSH_AUTH_SOCK=$(tmux showenv | grep SSH_AUTH_SOCK | cut -d= -f2)
        fi
}

title() {
        printf "\033k$1\033\\"
}

alias tmux_restore="tmux attach -t $USER || tmux new -s $USER"

# restore tmux unless we're already *in* tmux
test -z "$TMUX" && tmux_restore

